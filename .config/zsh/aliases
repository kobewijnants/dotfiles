# System
alias shutdown='sudo shutdown now'
alias reboot='sudo reboot'

# ls
alias ls='exa --icons'
alias ll='exa --long --icons'
alias la='exa --long --icons --all'
alias lt='exa --long --icons --all --tree'

# cd
alias cd='z'

# cat
alias cat='bat'

# wget
alias wget=wget --hsts-file="$XDG_DATA_HOME/wget-hsts"

# cp mv rm
alias cp='cp -v'
alias mv='mv -v'
alias rm='rm -v'

# grep
alias grep='grep -P -i --color=auto'

# Ports
alias ports='netstat -tulanp'

# NVIM
alias vim='nvim'
alias vi='nvim'

# Clear
alias c='clear'

# my public ip
alias myip='curl ipinfo.io/ip'

# Octave
alias octave='LD_PRELOAD=libnvblas.so NVBLAS_CONFIG_FILE=/etc/nvblas.conf octave -q'
